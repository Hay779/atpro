{# Le script est spécifique à cette page pour gérer les filtres et la pagination #}
<script>
document.addEventListener('DOMContentLoaded', function () {
    const filterButtons = document.querySelectorAll('.filters-actualites .filter-btn');
    const articles = document.querySelectorAll('.articles-grid .article-card');

    if (filterButtons.length > 0 && articles.length > 0) {
        filterButtons.forEach(button => {
            button.addEventListener('click', function () {
                filterButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');

                const filter = this.getAttribute('data-filter');

                articles.forEach(article => {
                    article.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                    article.style.transform = 'scale(0.95)';
                    article.style.opacity = '0';

                    setTimeout(() => {
                        if (filter === 'all' || article.getAttribute('data-category') === filter) {
                            article.style.display = '';
                            article.style.transform = 'scale(1)';
                            article.style.opacity = '1';
                        } else {
                            article.style.display = 'none';
                        }
                    }, 300);
                });
            });
        });
    }

    const paginationLinks = document.querySelectorAll('.pagination-atelier-express-pro a.page-number');
    if (paginationLinks.length > 0) {
        paginationLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                document.querySelectorAll('.pagination-atelier-express-pro a.page-number.active').forEach(activeLink => activeLink.classList.remove('active'));
                this.classList.add('active');
                console.log('Charger la page d\'articles : ' + this.textContent);
            });
        });
    }
    
    const newsletterFormCta = document.querySelector('.newsletter-cta-section .newsletter-form');
    if (newsletterFormCta) {
        newsletterFormCta.addEventListener('submit', function(e) {
            e.preventDefault();
            const emailInput = newsletterFormCta.querySelector('input[name="email_newsletter"]');
            if (emailInput && emailInput.value && emailInput.checkValidity()) {
                alert('Merci pour votre inscription à la newsletter : ' + emailInput.value + ' (Simulation)');
                emailInput.value = ''; 
            } else {
                alert('Veuillez entrer une adresse e-mail valide. (Simulation)');
                if(emailInput) emailInput.focus();
            }
        });
    }

});
</script>