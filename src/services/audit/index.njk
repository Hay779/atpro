<script>
document.addEventListener('DOMContentLoaded', function () {
    const faqItems = document.querySelectorAll('.faq-service dt');
    faqItems.forEach(item => {
        item.addEventListener('click', () => {
            const answer = item.nextElementSibling;
            const isExpanded = item.getAttribute('aria-expanded') === 'true';

            // Ferme les autres réponses (comportement accordéon)
            faqItems.forEach(otherItem => {
                if (otherItem !== item) {
                    otherItem.setAttribute('aria-expanded', 'false');
                    otherItem.nextElementSibling.hidden = true;
                }
            });

            // Ouvre/ferme la réponse cliquée
            item.setAttribute('aria-expanded', !isExpanded);
            answer.hidden = isExpanded;
        });
        // Cache initialement les réponses non dépliées
        if (item.getAttribute('aria-expanded') !== 'true') {
            item.nextElementSibling.hidden = true;
        }
    });
});
</script>